<!-- profile.ejs -->

<% if(locals.lastVisit){ %>
    <div class="alert alert-primary" role="alert">
        Your Last Visit was on : <%= locals.lastVisit %>
    </div>
 <% } %>

<h2><%= username %>'s Profile</h2>

<div class="user-info">
    <p><strong>Username:</strong> <%= username %></p>
    <p><strong>Email:</strong> <%= useremail %></p>
</div>

<h3>Your Recipes</h3>

<div class="recipe-list">
    <% recipes.forEach(recipe => { %>
        <div class="recipe-card">
            <h4><%= recipe.title %></h4>
            <p><strong>Author:</strong> <%= recipe.author %></p>
            <a href="/recipe/<%= recipe.recipeId %>">View Recipe</a>
            <a style="color: green;" href="/update-recipe/<%= recipe.recipeId %>">Update</a>
            <a style="color: red;" href="/recipe-delete/<%= recipe.recipeId %>">Delete</a>
        </div>
    <% }) %>
</div>
<a href="/">Back to Home</a>


