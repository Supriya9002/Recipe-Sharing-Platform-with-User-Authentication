<!-- home.ejs -->

<h3 style="color: cornflowerblue;">Welcome to the Recipe Sharing Platform</h3>

<div class="recipe-list">
    <% recipes.forEach(recipe => { %>
        <div class="recipe-card">
            <h3><%= recipe.title %></h3>
            <p><strong>Author:</strong> <%= recipe.author %></p>
            <a href="/recipe/<%= recipe.recipeId %>">View Recipe</a>
            <!-- <a style="color: red;" href="/update-recipe/<%= recipe.recipeId %>">Update</a> -->
        </div>
    <% }) %>
</div>
